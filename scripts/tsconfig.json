{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "baseUrl": "..",
    "paths": {
      "@/lib/*": ["src/lib/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["../node_modules"]
}